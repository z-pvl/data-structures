include <iostream>
#include<string>

//#include "d_search.h"	// generic sequential and binary searches

using namespace std;

template <typename T>
int find_last_of(const T arr[], int first, int last, const T& target);

int main()
{
	int intArr[10] = {2,5,3,5,4,7,5,1,8,9};
	char charArr[] = "mathematics";
	string strArr[5] = {"june", "joe", "glenn", "joe", "glenn"};
	
	string g = "glenn";
	char a = 'a';
	cout << find_last_of(intArr, 0, 10, 5) << endl;
	cout << find_last_of(charArr, 0 , 10, a) << endl;
	cout << find_last_of(strArr, 0, 5, g) << endl;
	
	return 0;
}

template <typename T>
int find_last_of(const T arr[], int first, int last, const T& target)
{
	int i, last_i = last;

   // scan indices in the range first <= i < last

	
	for(i=first; i < last; i++)
		
		if (arr[i] == target)
			last_i = i;
		return last_i; 
	

	
		
						// return last if target not found
}
